<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    android:padding="@dimen/d_20">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/d_56"
        android:text="Hệ thống rạp chiếu:"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:padding="@dimen/d_10"/>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/d_40"
        android:orientation="vertical"
        android:layout_gravity="center">


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/d_10">

            <ImageView
                android:id="@+id/iv_cgv"
                android:layout_width="@dimen/d_80"
                android:layout_height="@dimen/d_80"
                android:src="@drawable/ic_cgv" />

            <TextView
                android:id="@+id/tv_cgv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/d_10"
                android:text="CGV Cinemas Vietnam "
                android:textColor="@color/white"
                android:textSize="20sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/d_20"
            android:padding="@dimen/d_10">

            <ImageView
                android:id="@+id/iv_lotte"
                android:layout_width="@dimen/d_80"
                android:layout_height="@dimen/d_80"
                android:src="@drawable/ic_lotte" />

            <TextView
                android:id="@+id/tv_lotte"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/d_10"
                android:text="LOTTE Cinemas Vietnam"
                android:textColor="@color/white"
                android:textSize="20sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/d_20"
            android:padding="@dimen/d_10">

            <ImageView
                android:id="@+id/iv_bhd"
                android:layout_width="@dimen/d_80"
                android:layout_height="@dimen/d_80"
                android:src="@drawable/ic_bhd" />

            <TextView
                android:id="@+id/tv_bhd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/d_10"
                android:text="BHD Star Cineplex"
                android:textColor="@color/white"
                android:textSize="20sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/d_20"
            android:padding="@dimen/d_10">

            <ImageView
                android:id="@+id/iv_beta"
                android:layout_width="@dimen/d_80"
                android:layout_height="@dimen/d_80"
                android:src="@drawable/ic_beta" />

            <TextView
                android:id="@+id/tv_beta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/d_10"
                android:text="BETA Cineplex"
                android:textColor="@color/white"
                android:textSize="20sp" />
        </TableRow>
    </LinearLayout>
</LinearLayout>