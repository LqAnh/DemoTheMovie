<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/d_56"
    android:background="@color/light_grey_3"
    android:orientation="vertical">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="@dimen/d_56">

        <ImageView
            android:id="@+id/iv_log_out"
            android:layout_width="@dimen/d_30"
            android:layout_height="@dimen/d_30"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:src="@drawable/icl_ogout"
            app:tint="@color/white" />

      <ImageView
          android:id="@+id/iv_history"
          android:layout_width="0dp"
          android:layout_weight="2"
          android:layout_height="@dimen/d_35"
          android:src="@drawable/ic_gio_hang"
          android:layout_gravity="center_vertical"
          app:tint="@color/white" />

        <ImageView
            android:id="@+id/iv_account"
            android:layout_width="@dimen/d_30"
            android:layout_height="@dimen/d_30"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:src="@drawable/ic_account"
            app:tint="@color/white" />
    </TableRow>

</LinearLayout>