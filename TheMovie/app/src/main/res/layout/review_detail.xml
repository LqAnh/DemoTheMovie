<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/d_10"
    android:orientation="vertical"
    android:background="@color/light_black">


    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/im_author"
            android:layout_width="@dimen/d_30"
            android:layout_height="@dimen/d_30"
            android:src="@drawable/icl_ogout" />

        <TextView
            android:id="@+id/tv_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:fontFamily="sans-serif-light"
            android:text="msbreviews"
            android:textColor="@color/light_grey"
            android:textSize="14sp" />

    </TableRow>


    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/d_10">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rating: "
            android:textColor="@color/white"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/light_grey"
            android:textSize="15sp" />
    </TableRow>

    <TextView
        android:id="@+id/tv_review"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/d_5"

        android:ellipsize="end"
        android:layout_marginStart="@dimen/d_5"
        android:text="abcgb djfhjdsv "
        android:textColor="@color/light_grey"
        android:textSize="15sp" />

    <View
        android:layout_marginTop="@dimen/d_15"
        android:layout_marginBottom="@dimen/d_5"
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/grayDark"/>
</LinearLayout>